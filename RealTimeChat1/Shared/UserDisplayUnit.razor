<a href="#" class="list-group-item list-group-item-action border-0">
	<div class="badge bg-success float-right">5</div>
	<div class="d-flex align-items-start">
		<Avatar avatarImagePath = "@AvatarImagePath" />
		<div class="flex-grow-1 ml-3">
			<strong>@UserName</strong>
			<div class="small"><span class="fas fa-circle chat-online"></span> @UserNetworkStatus</div>
		</div>
	</div>
</a>
@code {
	[Parameter]
	public string AvatarImagePath { get; set; } = "https://bootdey.com/img/Content/avatar/avatar5.png";

	[Parameter]
	public string UserName { get; set; } = "Username";

	[Parameter]
	public string UserNetworkStatus { get; set; } = "Last seen recently";
}